@model Atos.Web.Mobile.Trends.Models.Answer

@* This partial view defines form fields that will appear when creating and editing entities *@

<div class="editor-label">
    @Html.LabelFor(model => model.Description)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.Description)
    @Html.ValidationMessageFor(model => model.Description)
</div>

<div class="editor-label">
    @Html.LabelFor(model => model.NumberOfChosenAsAnswer)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.NumberOfChosenAsAnswer)
    @Html.ValidationMessageFor(model => model.NumberOfChosenAsAnswer)
</div>

<div class="editor-label">
    Question
</div>
<div class="editor-field">
    @Html.DropDownListFor(model => model.QuestionId, ((IEnumerable<Atos.Web.Mobile.Trends.Models.Question>)ViewBag.PossibleQuestions).Select(option => new SelectListItem {
        Text = Html.DisplayTextFor(_ => option).ToString(), 
        Value = option.QuestionId.ToString(),
        Selected = (Model != null) && (option.QuestionId == Model.QuestionId)
    }), "Choose...")
    @Html.ValidationMessageFor(model => model.QuestionId)
</div>
