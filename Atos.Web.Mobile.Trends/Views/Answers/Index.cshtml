@model IEnumerable<Atos.Web.Mobile.Trends.Models.Answer>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Description
        </th>
        <th>
            NumberOfChosenAsAnswer
        </th>
        <th>
            Question
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
			@item.Description
        </td>
        <td>
			@item.NumberOfChosenAsAnswer
        </td>
        <td>
			@Html.DisplayTextFor(_ => item.Question).ToString()
        </td>
    </tr>
}

</table>


